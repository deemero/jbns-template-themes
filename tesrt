
<div class="container-fluid">
        <div class="row">
<?php
$statement1 = "SELECT * FROM slider WHERE website_id = '$website_id' and trash!='1'";
$runstatement = mysqli_query($conn_cpanel, $statement1);  
?>
            <div class="col-lg-12 px-0">
            <div class="owl-carousel main-carousel position-relative">

<?php
while ($displayData = mysqli_fetch_array($runstatement, MYSQLI_ASSOC)) {
?>
                    <div class="position-relative overflow-hidden" style="height: 500px;">

                    <img class="img-fluid img-thumbnail" style="height:auto; width:100%" src="<?php echo $url; ?>media_agensi/<?php echo $website_id?>/slider/<?php echo $displayData['gambar']?>"></a>
                        <div class="overlay">
                            <div class="mb-">
                                <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                                    href="">Berita</a>
                                <a class="text-white" href="">March 21, 2023</a>
                            </div>
                            <a href="<?php echo filter_var($displayData['link'],FILTER_SANITIZE_STRING)?>" target="_blank">
                        </div>
                    </div>
            </div>
                </div>
            </div>
        </div>
    </div>
<?php } ?>  

  
 
 


   
